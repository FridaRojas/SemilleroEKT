<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingGeneral"
    android:layout_marginBottom="60dp"
    tools:context=".ui.modulotareas.detalletareas.DetalleNivelAltoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Nombre de la Tarea -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombreTareaD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Nombre de la Tarea"
            style="@style/StyleTitleFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre de la Persona -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombrePersonaD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            style="@style/StyleTextFragment"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Nombre de la persona"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreTareaD" />

        <!-- Prioridad -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPrioridadD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            style="@style/StyleTextGray"
            android:layout_marginTop="@dimen/marginFormulario"
            android:text="Prioridad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNombrePersonaD"
            app:layout_constraintBottom_toTopOf="@id/txtField_descripcion"/>

        <!-- Status -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtEstatusD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Status"
            style="@style/StyleTextGray"
            android:layout_marginTop="@dimen/marginFormulario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNombrePersonaD"
            app:layout_constraintBottom_toTopOf="@id/txtField_descripcion"/>

        <!-- Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtField_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Descripción"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEstatusD"
            app:layout_constraintBottom_toTopOf="@id/field_fecha_inicio">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDescripcionD"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:imeOptions="actionDone"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha de Inicio -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/field_fecha_inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Fecha de Inicio"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/field_fecha_fin"
            app:layout_constraintTop_toBottomOf="@id/txtField_descripcion"
            app:startIconDrawable="@drawable/iconocalendario"
            app:layout_constraintBottom_toTopOf="@id/txtField_observacion">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFechaInicioD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha de Fin -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/field_fecha_fin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Fecha de Fin"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtField_descripcion"
            app:layout_constraintStart_toEndOf="@id/field_fecha_inicio"
            app:startIconDrawable="@drawable/iconocalendario"
            app:layout_constraintBottom_toTopOf="@id/txtField_observacion">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFechaFinD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Observaciones -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtField_observacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Observaciones"
            app:layout_constraintTop_toBottomOf="@+id/field_fecha_fin"
            app:layout_constraintBottom_toTopOf="@id/btnAdjuntarArchivoF">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtObservacionesD"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:imeOptions="actionDone"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btnAdjuntarArchivoF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            style="@style/StyleTextFragment"
            android:drawableLeft="@drawable/iconoadjuntararchivo"
            android:layout_marginTop="@dimen/marginFormulario"
            android:textColor="@color/colorPrimary"
            android:text="  Adjuntar Archivo PDF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtField_observacion"
            app:layout_constraintBottom_toTopOf="@id/buttons"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAdjuntarArchivoF"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnGuardarTareaF"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_bg"
                style="@style/StyleButton"
                android:text="Guardar"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/btnCancelarEdicion"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="16dp" />
            <Button
                android:id="@+id/btnCancelarEdicion"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_bg"
                style="@style/StyleButton"
                android:text="Cancelar"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/btnEditarTareaF"
                android:layout_width="120dp"
                android:layout_height="60dp"
                style="@style/StyleButton"
                android:textSize="14sp"
                android:background="@drawable/rounded_bg"
                android:text="Editar Tarea"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCancelarTareaF"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btnCancelarTareaF"
                android:layout_width="120dp"
                android:layout_height="60dp"
                style="@style/StyleButton"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_bg"
                android:text="Cancelar Tarea"
                app:layout_constraintStart_toEndOf="@id/btnEditarTareaF"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btnObservacionF"
                android:layout_width="120dp"
                android:layout_height="60dp"
                style="@style/StyleButton"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_bg"
                android:text="Agregar Observación"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/btnCancelarTareaF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>