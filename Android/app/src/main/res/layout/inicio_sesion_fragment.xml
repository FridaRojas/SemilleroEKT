<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.iniciosesion.InicioSesionFragment"
    android:orientation="vertical"

  >

        <ImageView
            android:id="@+id/Splash1"
            android:background="#1F1F1F1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_agil"
            android:visibility="invisible"
            />



        <!-- Linear progress indicator -->



        <LinearLayout
            android:id="@+id/vista1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressLoading"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:visibility="invisible"
                    android:layout_marginHorizontal="@dimen/fragment_vertical_margin"
                    android:layout_marginBottom="2dp"
                    android:indeterminate="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="@dimen/fragment_vertical_margin"
                    android:max="29"
                    android:progressBackgroundTint="@color/colorGray"
                    android:backgroundTintMode="add"
                    android:secondaryProgressTintMode="add"
                    />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
            android:text="Bienvenido"
            android:textAlignment="center"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingGeneral"
            android:layout_marginTop="@dimen/margin_top_general"
            android:layout_marginHorizontal="@dimen/fragment_vertical_margin"
            android:text="Número de Empleado"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:padding="@dimen/margin_top_general"
            app:startIconDrawable="@drawable/user_icon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingGeneral"
            android:layout_marginTop="@dimen/margin_top_general"
            android:layout_marginHorizontal="@dimen/fragment_vertical_margin"
            android:text="Contraseña"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fragment_vertical_margin"
            android:padding="@dimen/margin_top_general"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:startIconDrawable="@drawable/vector_icon"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionDone"
                    android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--    -->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_general"
            android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
            android:paddingVertical="@dimen/paddingGeneral"
            android:text="@string/login_login_button"
            app:layout_constraintTop_toBottomOf="@id/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--       <Button
                   android:id="@+id/btnRecuperarPassword"
                   style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="16dp"
                   android:layout_marginTop="8dp"
                   android:paddingVertical="16dp"
                   android:textAlignment="textEnd"
                   android:text="@string/login_olvidado"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/btnLogin" />
                   -->


        <!--     app:visible="@{viewModel.progressVisibility}" /> -->
        <!-- android:visibility="@{ viewModel.progressVisibility ? View.VISIBLE : View.GONE }" -->
        </LinearLayout>



</FrameLayout>