<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.modulomensajeria.conversation.UserConversationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUserConversacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fondomessage"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="@dimen/margin_bottom_recycler"
        android:paddingStart="@dimen/paddingGeneral"
        android:paddingEnd="@dimen/paddingGeneral"
        android:paddingTop="@dimen/paddingRecyclerConversation"
        />

    <View
        android:id="@+id/fondomessage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_view_write_mesage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorBackground"
        android:layout_marginTop="@dimen/margin_top_general"
        >

    </View>

    <ImageView
        android:id="@+id/btnArchivoAdj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_mensaje"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/iconoadjuntar"
        android:layout_marginBottom="@dimen/margin_bottom_icon_enviar"
        android:layout_marginEnd="@dimen/margin_end_general"
        android:layout_marginStart="@dimen/paddingGeneral"
        app:layout_constraintHorizontal_weight="1"/>

    <EditText
        android:id="@+id/et_mensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnArchivoAdj"
        app:layout_constraintEnd_toStartOf="@id/btnSendMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Mensaje"
        android:padding="@dimen/padding_message_writer"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/margin_start_general"
        android:layout_marginEnd="@dimen/margin_end_general"
        android:layout_marginBottom="@dimen/paddingGeneral"
        app:layout_constraintHorizontal_weight="8"
        >
    </EditText>

    <ImageView
        android:id="@+id/btnSendMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/et_mensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginBottom="@dimen/margin_bottom_icon_enviar"
        android:layout_marginStart="@dimen/margin_start_general"
        android:layout_marginEnd="@dimen/paddingGeneral"
        android:src="@drawable/iconoenviar">
    </ImageView>

    <TextView
        android:id="@+id/errorchat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_write_mesage"
        android:text="No puedes responder este mensaje"
        android:gravity = "center"
        android:textColor="@color/white"
        android:textSize="@dimen/paddingGeneral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ProgressBar
        android:id="@+id/progress_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/recyclerUserConversacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/paddingGeneral"></ProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>