<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingGeneral"
    android:background="@color/colorBackground"
    tools:context=".ui.modulomensajeria.listaconversations.ListConversationFragment">

    <EditText
        android:id="@+id/et_search_conversation"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_search"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/iconobuscar"
        app:layout_constraintEnd_toStartOf="@id/imgBroadcast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margin_bottom_general"
        android:layout_marginEnd="@dimen/margin_end_general">

    </EditText>

    <ImageView
        android:id="@+id/imgBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/et_search_conversation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iconobroadcast"
        android:layout_marginStart="@dimen/margin_start_general"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerListGroups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/et_search_conversation"
    android:layout_marginTop="@dimen/margin_top_general"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerListChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerListGroups"
        android:layout_marginTop="@dimen/margin_top_general"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnListContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/iconoagregar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>