<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.modulomensajeriabuzon.b.BuzonFragment"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/buzon_header">




    <ImageView
        android:id="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/iconobroadcast"/>


    <LinearLayout
        android:onClick="cambiar"
        android:background="@drawable/rounded_bg"
        android:id="@+id/mensajesenviados"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_enviados"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="24dp"
            android:text="   Mensajes Enviados"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="cambiar"
        android:background="@drawable/rounded_bg"
        android:id="@+id/mensajesrecibidos"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mensajesenviados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView

            android:layout_marginStart="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="24dp"
            android:text="   Comunicados"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>