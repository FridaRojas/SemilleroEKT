<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.modulomensajeria.conversationonetoone.ConversationOneToOneActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerConversacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fondomensaje"
        
        />

    <View
        android:id="@+id/fondomensaje"
    android:layout_width="wrap_content"
    android:layout_height="66dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorBackground"
    >

</View>

    <ImageView
        android:id="@+id/btnArchivoAdjunto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_mensaje"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/iconoadjuntar"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_weight="1"/>

    <EditText
        android:id="@+id/et_mensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnArchivoAdjunto"
        app:layout_constraintEnd_toStartOf="@id/btnEnviarMensaje"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Mensaje"
        android:padding="4dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/white"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_weight="8"
        >
    </EditText>

    <ImageView
        android:id="@+id/btnEnviarMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/et_mensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/iconoenviar">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>