<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.modulomensajeriabuzon.b.BuzonUserFragment"
    android:background="#F5F5F5"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|center_vertical">

        <ImageView
            android:id="@+id/buzonUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/broadcast_leido_btn"/>

        <Button
            android:id="@+id/mensajesrecibidos"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buzonUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensajes Enviados"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:textStyle="bold">

        </Button>


        <ImageView
            android:id="@+id/comunicados"
            app:layout_constraintTop_toBottomOf="@id/mensajesrecibidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/icono_comunicados"/>

        <Button
            android:id="@+id/mensajescomunicados"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comunicados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comunicados"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:textStyle="bold"
            android:layout_marginBottom="48dp">


        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>