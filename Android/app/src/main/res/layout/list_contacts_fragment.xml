<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/paddingGeneral"
    android:background="@color/colorBackground"
    tools:context=".ui.modulomensajeria.listcontacts.ListContactsFragment">

    <EditText
        android:id="@+id/et_search_contact"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        android:drawableEnd="@drawable/iconobuscar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerListContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_contact"/>

</androidx.constraintlayout.widget.ConstraintLayout>